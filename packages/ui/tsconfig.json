{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "lib": ["ES2022", "dom", "dom.iterable"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/hooks/*": ["./src/hooks/*"]
    },
    "noEmit": true,
    "composite": true
  },
  "references": [{ "path": "../types" }, { "path": "../utils" }],
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
