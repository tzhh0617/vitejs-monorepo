{
  "name": "nextjs-demo-workspace",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "dev:client": "pnpm --filter client dev",
    "dev:admin": "pnpm --filter admin dev",
    "dev:all": "pnpm run dev:client & pnpm run dev:admin",
    "build": "pnpm run --recursive build",
    "build:client": "pnpm --filter client build",
    "build:admin": "pnpm --filter admin build",
    "build:all": "pnpm run build:client && pnpm run build:admin",
    "start": "pnpm run --parallel start",
    "start:client": "pnpm --filter client start",
    "start:admin": "pnpm --filter admin start",
    "lint": "pnpm run --recursive lint",
    "lint:fix": "pnpm run --recursive lint:fix",
    "type-check": "pnpm run --recursive type-check",
    "type-check:ui": "pnpm --filter @workspace/ui type-check",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "clean": "pnpm run --recursive clean && rm -rf node_modules",
    "clean:all": "pnpm run clean && rm -rf .next node_modules",
    "test": "pnpm run --parallel test"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/eslintrc": "^3",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^9",
    "eslint-config-next": "16.0.10",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "apps/client/**/*.{js,jsx,ts,tsx}": [
      "cd apps/client && eslint --fix",
      "prettier --write"
    ],
    "apps/admin/**/*.{js,jsx,ts,tsx}": [
      "cd apps/admin && eslint --fix",
      "prettier --write"
    ],
    "packages/ui/**/*.{js,jsx,ts,tsx}": [
      "cd packages/ui && eslint --fix",
      "prettier --write"
    ],
    "packages/utils/**/*.{js,jsx,ts,tsx}": [
      "cd packages/utils && eslint --fix",
      "prettier --write"
    ],
    "packages/types/**/*.{js,jsx,ts,tsx}": [
      "cd packages/types && eslint --fix",
      "prettier --write"
    ],
    "packages/hooks/**/*.{js,jsx,ts,tsx}": [
      "cd packages/hooks && eslint --fix",
      "prettier --write"
    ],
    "packages/api/**/*.{js,jsx,ts,tsx}": [
      "cd packages/api && eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "packageManager": "pnpm@9.15.0"
}
