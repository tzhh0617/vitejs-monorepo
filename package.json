{
  "name": "nextjs-demo-workspace",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "turbo run dev",
    "dev:admin": "turbo run dev --filter=@workspace/admin",
    "build": "turbo run build",
    "build:admin": "turbo run build --filter=@workspace/admin",
    "start": "turbo run start",
    "start:admin": "turbo run start --filter=@workspace/admin",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "type-check": "turbo run type-check",
    "type-check:components": "turbo run type-check --filter=@workspace/ui",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,css,md}\"",
    "clean": "turbo run clean && rm -rf node_modules",
    "clean:all": "turbo run clean && rm -rf .next node_modules",
    "test": "turbo run test"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/eslintrc": "^3",
    "@typescript-eslint/eslint-plugin": "^8.49.0",
    "@typescript-eslint/parser": "^8.49.0",
    "eslint": "^9",
    "eslint-config-next": "16.0.10",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "turbo": "^2.6.3",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "apps/admin/**/*.{js,jsx,ts,tsx}": [
      "cd apps/admin && eslint --fix",
      "prettier --write"
    ],
    "packages/ui/**/*.{js,jsx,ts,tsx}": [
      "cd packages/ui && eslint --fix",
      "prettier --write"
    ],
    "packages/types/**/*.{js,jsx,ts,tsx}": [
      "cd packages/types && eslint --fix",
      "prettier --write"
    ],
    "packages/lib/**/*.{js,jsx,ts,tsx}": [
      "cd packages/lib && eslint --fix",
      "prettier --write"
    ],
    "packages/hooks/**/*.{js,jsx,ts,tsx}": [
      "cd packages/hooks && eslint --fix",
      "prettier --write"
    ],
    "packages/api/**/*.{js,jsx,ts,tsx}": [
      "cd packages/api && eslint --fix",
      "prettier --write"
    ],
    "*.{json,css,md}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  },
  "packageManager": "pnpm@9.15.0"
}
