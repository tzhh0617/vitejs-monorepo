{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "jsx": "preserve",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "incremental": true,
    "allowSyntheticDefaultImports": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@workspace/components": ["./packages/components/src"],
      "@workspace/components/*": ["./packages/components/src/*"],
      "@workspace/utils": ["./packages/utils/src"],
      "@workspace/utils/*": ["./packages/utils/src/*"],
      "@workspace/types": ["./packages/types/src"],
      "@workspace/types/*": ["./packages/types/src/*"],
      "@workspace/hooks": ["./packages/hooks/src"],
      "@workspace/hooks/*": ["./packages/hooks/src/*"],
      "@workspace/api": ["./packages/api/src"],
      "@workspace/api/*": ["./packages/api/src/*"],
      "@workspace/config": ["./packages/config"],
      "@workspace/config/*": ["./packages/config/*"]
    }
  },
  "include": ["apps/*/src/**/*.{js,ts,jsx,tsx,mdx}", "packages/*/src/**/*.{js,ts,jsx,tsx,mdx}"],
  "exclude": ["node_modules", "dist", ".next", "out"]
}
