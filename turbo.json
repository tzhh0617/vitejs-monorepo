{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"],
      "inputs": ["src/**/*.{ts,tsx,js,jsx}", "package.json"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": ["NODE_ENV"]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "inputs": ["src/**/*.{ts,tsx,js,jsx}", "*.json"]
    },
    "lint:fix": {
      "dependsOn": ["^lint"],
      "cache": false
    },
    "type-check": {
      "dependsOn": ["^type-check"],
      "inputs": ["src/**/*.{ts,tsx}", "*.json", "tsconfig.json"]
    },
    "clean": {
      "cache": false
    }
  }
}
